.shop{
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
  font-size: 28rpx;
  position: relative
}
.shop .left{
  display: flex;
  align-items: center;
}
.shop image{
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
}
.shop .info{
  display: flex;
  flex-direction: column;
}
.shop .name{
  font-size: 36rpx;
}
.shop .score{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  background-color: #EE523D;
  color: #fff;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 10rpx;
  border-radius: 20rpx;
}

.tips{
  text-align: center;
  padding: 16rpx 0;
}

.centerTip{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  padding: 60% 0;
  z-index: 99;
}